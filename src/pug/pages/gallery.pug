extends ../layout/main
block variable
block meta
    title= 'Home'
    meta(name='description', content='')
block head
    link(rel='stylesheet', href="/wp-content/themes/vernadsky/assets/styles/main.min.css")
block scripts
    script(src='/wp-content/themes/vernadsky/assets/scripts/libs.js')
    script(src='/wp-content/themes/vernadsky/assets/scripts/index.js')
    script(src='/wp-content/themes/vernadsky/assets/scripts/scroll.js')
    script(src='/wp-content/themes/vernadsky/assets/scripts/svgBg.js')

block content
    section.main
        .gallery
            include ./includes/breadcrumb
            h1.title Галерея
            // svg лежит в html файле, повторяется на многих страницах. svg-all-bg.html
            .gallery__bg.wb-all__bg
                include ../includes/svg-all-bg.html
            .gallery__slider.js-gallery__slider
                .gallery__slider-el
                    img(src='/wp-content/themes/vernadsky/assets/images/gallery/1.png')
                .gallery__slider-el
                    img(src='/wp-content/themes/vernadsky/assets/images/gallery/2.jpg')
                .gallery__slider-el
                    img(src='/wp-content/themes/vernadsky/assets/images/gallery/3.jpg')
                .gallery__slider-el
                    img(src='/wp-content/themes/vernadsky/assets/images/gallery/4.jpg')
                .gallery__slider-el
                    img(src='/wp-content/themes/vernadsky/assets/images/gallery/5.jpg')
                .gallery__slider-el
                    img(src='/wp-content/themes/vernadsky/assets/images/gallery/6.jpg')
            .gallery__amount-slide
                span.gallery__amount-slide-current.js-gallery__amount-slide-current 0
                span /
                span.gallery__amount-slide-all.js-gallery__amount-slide-all 0


block footer
    include ../includes/menu
    footer.footer
        include ../includes/footer
    // include ../pages/includes/forms
block header
    header.header
        include ../includes/header.pug