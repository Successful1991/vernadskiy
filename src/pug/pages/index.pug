extends ../layout/main
block variable
block meta
	title= 'Home'
	meta(name='description', content='')
block head
		link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
	script(src='./assets/scripts/libs.js')
	script(src='./assets/scripts/scroll.js')
	script(src='./assets/scripts/index.js')
	script(src='./assets/scripts/home.js')
	script(src='./assets/scripts/svgBg.js')


block content
	section.main
		.wb-1.js-wb
			.wb-1__left
				.wb-1__icon
					a(href='#').wb-1__icon__link.hover-right
						+svg('instagram')
						.icon__hover instagram
					a(href='#').wb-1__icon__link.hover-right
						+svg('fb')
						.icon__hover facebook
				.wb-1__mouse
					+svg('mouse').js-wb-1__mouse
			.wb-1__content
				.wb-1__title Житловий комплекс VERNADSKY
				a(href='#').link.wb-1__link Квартири

			.wb-1__right
				.wb-1__icon
					a(href='#').wb-1__icon__link.hover-left
						+svg('key')
						.icon__hover  Обрати квартиру
					a(href='#').wb-1__icon__link.hover-left
						+svg('Webcam')
						.icon__hover Web камера
				.wb-1__fishka
					+svg('fishka')
			.wb-1__bg-video
				img(src='./assets/video/sky.gif')
			img(src='./assets/images/main/render.png').wb-1__bg-img
		.wb-2.js-wb
			.wb-2__bg
				include ../includes/svg-bg.html
			.wb-2__fishka
				.wb-2__fishka-event.js-wb__fishka-event(data-index=2)
				include ../includes/wb-2-fishka.html
			.wb-2__content
				.wb-2__title Комплекс
				.wb-2__text
					span Якщо ви шукаєте комплекс, де буде добре і затишно всій вашій родині? Вам у VERNADSKY.
					span Ви фанат району «Академмістечко» з його розвиненою інфраструктурою, безліччю садочків, шкіл, парків і торговельних центрів? Вам у VERNADSKY.
				a(href='/').wb-2__link.link Детальніше
		.wb-3.js-wb
			.wb-3__img-2
				img(src='./assets/images/main/img2.jpg')
			.wb-3__left
				.wb-3__img-1
					img(src='./assets/images/main/img1.jpg')
				.wb-3__content-wrap
					.wb-3__line
					.wb-3__content
						.wb-3__title Інфраструктура
						.wb-3__text
							span Для малечі різного віку ми побудуємо різноманітні майданчики і спортивні простори, яким, до речі, забудовник приділяє особливу увагу. Мами та тати матимуть фітнес-зали і салони краси.
						a(href='/').link.wb-3__link Детальніше
			.wb-3__logo
				+svg('fishka')
		.wb-4.js-wb
			.wb-4__img-1
				img(src='./assets/images/main/wb-4-1.jpg')
			.wb-4__img-2
				img(src='./assets/images/main/wb-4-2.jpg')
			.wb-4__comerc
				.wb-4__img-3
					img(src='./assets/images/main/wb-4-3.jpg')
				a(href='/').link.wb-4__left-link Комерційна нерухомість
			.wb-4__content-wrap
				.wb-4__line
				.wb-4__content
					.wb-4__title Квартири
					.wb-4__text
						span Ми будуємо не просто комплекс, ми будуємо справжню домінанту району, місце, в якому комфортно жити, ростити дітей, працювати, розвиватися.
					a(href='/').link.wb-4__link Обрати квартиру
			.wb-4__logo
				+svg('fishka')
		.wb-5.js-wb
			.wb-5__bg
				include ../includes/svg-bg.html
			.wb-5__fishka
				.wb-2__fishka-event.js-wb__fishka-event(data-index=5)
				include ../includes/wb-5-fishka.html
			.wb-5__img
				img(src='./assets/images/main/wb-5-1.jpg')
			.wb-5__forms
				.wb-5__forms-title Напишіть нам
				form.wb-5__form
					legend.wb-5__form-legend Наші менеджери зв’яжуться з вами у найкоротший час
					label.wb-5__form-label.wb-5__form-user
						input(type='text' placeholder='ваше ім’я' required)
						span.form__info
					label.wb-5__form-label.wb-5__form-mail
						input(type='text' placeholder='example@email.com' required)
						span.form__info
					label.wb-5__form-label.wb-5__form-message
						input(type='text' placeholder='повідомлення' required)
						span.form__info
					button(type='submit' value='Надіслати').link.wb-5__form-button Надіслати

block footer
	include ../includes/menu
	footer.footer.footer__small
		include ../includes/footer
	// include ../pages/includes/forms

block header
	header.header
		include ../includes/header.pug

